{
    "manifest_version": 2,
    "name": "openDevD",
    "version": "0.1",
    "description": "Create and access to a list of favorite links for dev, with additionnal support for local apps.",
    "icons": {
        "48": "popup/dist/icons/icon-48.png",
        "96": "popup/dist/icons/icon-96.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "browser_action": {
        "default_icon": "popup/dist/icons/icon-48.png",
        "default_title": "Show links of openDevD",
        "default_popup": "popup/dist/index.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "addon@example.com",
            "strict_min_version": "42.0"
        }
    }
}